---
//content
import { getCollection } from "astro:content";

// components
import ProjectCard from "@/components/ProjectCard.astro";

const projects = await getCollection("projects");
const { limit, tagName } = Astro.props

type Props = {
    limit?: number;
    tagName: "h2" | "h3";
};
---

<div class="grid-wrapper">
    {
        limit
        ? projects
            .slice(0, limit)
            .map((project) => <ProjectCard project={project} tagName={tagName} />)
        : projects.map((project) => <ProjectCard tagName={tagName} project={project} />)
    }
</div>